                            <div class=" col-sm-6 w3_a1">
                                <h4>Uy manzil</h4>
                                <p>Xonadon</p>
                            </div>
                            <div class="col-sm-6 w3_a2">
                                <h4>@x.Uy.Tuman.Tuman_nomi</h4>
                            </div>
                        </div>
                    </div>
                    <div class="w3_1">
                        <div class="row">
                            <div class=" col-sm-6 w3_a1">
                                <h4>To'ov turi</h4>
                                <p>Xonadon</p>
                            </div>
                            <div class="col-sm-6 w3_a2">
                                <h4>
                                    <select name="tulovId">
                                        <option>Tanlang...</option>
                                        @foreach (tulov t in Model.tulov)
                                        {
                                    <option value="@t.Id">@t.Tulov_turi</option>
                                            }
                                    </select><br /><br />
                                </h4>
                            </div>
                        </div>
                    </div>

                    <div class="w3_1">
                        <div class="row">
                            <div class=" col-sm-6 w3_a1">

                            </div>
                            <div class="col-sm-6 w3_a2">
                                <h4><input type="submit" value="Sotib olish" class="btn btn-success" /></h4>
                            </div>
                        </div>
                        
                    </div>
                }

            </div>
        </div>
    </section>
</form>


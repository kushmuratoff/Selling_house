        <div class="pricinglist ">
            <h3 class="mb-lg-5 mb-md-4 mb-sm-3 mb-2">Xonadon ma'lumotlari</h3>
            <div class="container">
                @foreach (Xonadon x in Model.Xonadon)
                {
                    <div class="w3_1">
                        <div class="row">
                            <div class="col-sm-6 w3_a1">
                                <h4>Narxi</h4>
                                <p>Xonadon</p>
                            </div>
                            <div class="col-sm-6 w3_a2">
                                <h4>@x.Narxi</h4>
                            </div>
                        </div>
                    </div>
                    <div class="w3_1">
                        <div class="row">
                            <div class="col-sm-6 col-xs-6 w3_a1">
                                <h4>Xonalar soni</h4>
                                <p>Xonadon</p>
                            </div>
                            <div class="col-sm-6 col-xs-6 w3_a2">
                                <h4>@x.Xonalar_soni ta</h4>
                            </div>
                        </div>
                    </div>
                    <div class="w3_1">
